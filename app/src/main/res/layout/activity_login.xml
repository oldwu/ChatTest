<?xml version="1.0" encoding="utf-8"?>
<com.test.view.LoginView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loginview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/head_title"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/username_login_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/username" />

        <EditText
            android:id="@+id/username_login_eit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@id/username_login_img"
            android:background="@null"
            android:cursorVisible="true"
            android:hint="@string/login_username_hit"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/text_cursor_bg"
            android:textSize="@dimen/text_medium_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/login_split_line_color" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/password_login_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/password" />

        <EditText
            android:id="@+id/password_login_eit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@id/password_login_img"
            android:background="@null"
            android:cursorVisible="true"
            android:hint="@string/password_hit"
            android:password="true"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/text_cursor_bg"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/login_split_line_color" />
    </RelativeLayout>

    <Button
        android:id="@+id/login_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:text="登录"
        />

    <Button
        android:id="@+id/reg_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:text="注册"
        />

    


</com.test.view.LoginView>
